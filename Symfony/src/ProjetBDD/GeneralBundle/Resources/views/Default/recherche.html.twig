{% extends '::layout.html.twig' %}

{% block title %} Accueil {% endblock %}

{% block corps %}

<h1>Recherche sur le mot : {{nom}}</h1> <br />
<div class="panel panel-primary">
	<div class="panel-heading">
		<div class="panel-title">
			Voici la liste des concepts/termes associés à ce mot :
		</div>
	</div>
	
	<div class="table-responsive">
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Nom</th>
					<th>Decription</th>
					<th>Type<th>
				</tr>
			</thead>
			<tbody>
				{% if tabConcept is not empty %}

					{% for concept in tabConcept %}
						<tr>
							<td><a href="{{path('ProjetBDDGeneralAfficheConcept', {'nom' : concept.nomConcept})}}" type="button" class="btn btn-default">{{concept.nomConcept}}</a></td>
							<td>{{concept.description}}</td>
							<td>Concept</td>
						</tr>
					{% endfor %}
				{% endif %}
			</tbody>
			<tbody>
				{% if tabTerme is not empty %}
					{% for terme in tabTerme %}
						<tr>
							<td><a href="{{path('ProjetBDDGeneralAfficheTerme', {'nom' : terme.nomTerme})}}" type="button" class="btn btn-default">{{terme.nomTerme}}</a></td>
							<td>{{terme.description}}</td>
							<td>Terme</td>
						</tr>
					{% endfor %}
				{% endif %}
			</tbody>
		</table>
	</div>
</div>
	<a href="{{path('ProjetBDDGeneralIndex')}}" type="button" class="btn btn-success">Retour a l'accueil</a>

{% endblock %}