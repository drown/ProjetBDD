{% extends '::layout.html.twig' %}

{% block title %} Accueil {% endblock %}

{% block corps %}

{% if flash is defined %}
	<div class="alert alert-{{typeFlash}}">
		{{flash}}
	</div>
{% endif %}

<div class="panel panel-primary">
	<div class="panel-heading">
		<div class="panel-title">
			Cr√©ation de concept
		</div>
	</div>
	<div class="panel-body">
		<form type="form" method="post" action="{{path('ProjetBDDAdminBundleCreationConcept')}}">
			<div class="form-group">
				<label for="nomConcept">Nom concept :</label>
				<input type="text" name="nomConcept" id="nomConcept" class="form-control" />
			</div>
			<div class="form-group">
				<label for="description">Description :</label>
				<input type="text" name="description" id="description" class="form-control" />
			</div>
			<div class="form-group">
				<label for="nomTermeVedette">Nom terme vedette :</label>
				<input type="text" name="nomTermeVedette" id="nomTermeVedette" class="form-control" />
			</div>
			<div class="form-group">
				<label for="descriptionTermeVedette">Description terme vedette :</label>
				<input type="text" name="descriptionTermeVedette" id="descriptionTermeVedette" class="form-control" />
			</div>
			<button type="submit" class="btn btn-success">Creer</button>
		</form>
	</div>
</div>
{% endblock %}